		<style>
			body {
				margin: 0;
				padding: 0;
				background: #000;
				color: white;
				position: relative;
				overflow-x: hidden;
				font-family: Arial, sans-serif;
			}

			.nieve {
				position: fixed;
				top: 0;
				left: 0;
				width: 100%;
				height: 100vh; /* Ocupa toda la altura del viewport */
				pointer-events: none;
				z-index: 0;
			}

			.copo {
				position: absolute;
				top: -10px;
				width: 1vw;
				height: 1vw;
				background-color: white;
				border-radius: 50%;
				opacity: 0.8;
				animation: caer 10s linear infinite;
			}

			@keyframes caer {
				0% {
					transform: translateY(-100px);
				}
				100% {
					transform: translateY(
						100vh
					); /* Cae hasta el final de la pantalla */
				}
			}

			/* Varias animaciones de copos */
			.copo:nth-child(1) {
				left: 5%;
				animation-duration: 6s;
				animation-delay: 0s;
			}
			.copo:nth-child(2) {
				left: 15%;
				animation-duration: 5s;
				animation-delay: 1s;
			}
			.copo:nth-child(3) {
				left: 25%;
				animation-duration: 7s;
				animation-delay: 2s;
			}
			.copo:nth-child(4) {
